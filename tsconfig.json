{
  "include": ["src"], // which files to compile
  "exclude": ["node_modules"], // which files to skip
  
    "compilerOptions": {
      "strict": false, // Turns off strict mode for more lenient checks
      "skipLibCheck": true, // Skips type checking for declaration files
      "noImplicitAny": false, // Allows implicit 'any' types
      "esModuleInterop": true, // Ensures compatibility with ES modules
      "target": "ES6", // Sets the target JS version
      "module": "commonjs", // Sets the module system (adjust if you're using ESM)
      "outDir": "./dist", // Specifies the output directory for compiled files
      "baseUrl": ".", // Base directory for resolving non-relative module names
      "paths": {
        "*": ["node_modules/*"]
      }
    
  }
  
}
